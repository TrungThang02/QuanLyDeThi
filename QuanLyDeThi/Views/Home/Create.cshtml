<div class="container" style="margin-top: 50px; width: fit-content;">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm rounded">
            <div class="card-body">
                <h5 class="card-title">Thêm mới đề thi</h5>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="sTenSach" class="form-label">Tên đề thi:</label>
                        <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSach" class="form-control" required />
                    </div>

                    <div class="col-md-6">
                        <label for="sMoTa" class="form-label">Mô tả:</label>
                        <textarea name="sMoTa" id="mytextarea" class="form-control">@ViewBag.MoTa</textarea>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="image" class="form-label">Ảnh bìa:</label>
                        <input type="file" name="image" class="form-control" />
                        @ViewBag.ThongBao
                    </div>

                    <div class="col-md-6">
                        <label for="file" class="form-label">File đề thi:</label>
                        <input type="file" name="file" class="form-control" />
                        @ViewBag.ThongBao
                        <p class="form-text text-muted">LƯU Ý : Chỉ được up file tài liệu &lt; 20MB !</p>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="dNgayCapNhat" class="form-label">Ngày tải lên:</label>
                        <input type="date" name="dNgayCapNhat" required class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label for="SubjectID" class="form-label">Môn học:</label>
                        @Html.DropDownList("SubjectID", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="ClassID" class="form-label">Lớp:</label>
                        @Html.DropDownList("ClassID", null, new { @class = "form-control" })
                    </div>

                    <div class="col-md-6">
                        <label for="sKeyword" class="form-label">Từ khóa:</label>
                        <input type="text" size="70" name="sKeyword" value="" class="form-control" required />
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label for="tentacgia" class="form-label">Tác giả:</label>
                        <input type="text" size="70" name="tentacgia" value="" class="form-control" required />
                    </div>
                </div>

                <input type="text" size="70" name="UserID" value="@id" class="form-control" required readonly hidden />

                <div class="row g-3">
                    <div class="col-md-12 mt-3">
                        <center>
                            <input type="submit" value="Thêm mới" class="btn btn-primary" />
                        </center>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



