
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="bcgd" style="margin-top : 20px">

    <h5 class="text-center bx-font-size">Tìm thấy @ViewBag.sl báo cáo</h5>

</div>

<div class="container">
    <div class="row">
        @foreach (var dt in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">

                        <a href="/Documents/CheckTypeFile/@dt.ExamID">
                            <img src="~/Content/images/AnhBaoCao/@dt.Image">
                        </a>

                    </div>
                    <div class="product-content">
                        <div class="text">
                            <a href="/Documents/CheckTypeFile/@dt.ExamID" class="tieude"> @dt.ExamName</a>
                        </div>
                        <hr />
                        <div class="view">
                            <span><i class="fa-regular fa-eye"></i> @dt.ViewCount</span>
                            <span><i class="fa-solid fa-download"></i> @dt.DownloadCount</span>
                        </div>


                    </div>
                </div>
            </div>
        }
    </div>
</div>

