@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    hr {
        background-color: #333;
        height: 1px;
        margin: 0;
        margin-bottom: 2px;
    }

    .tieude {
        font-weight: bold;
    }

    .text a {
        width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 23px;
        -webkit-line-clamp: 3;
        height: 68px;
        display: -webkit-box;
        -webkit-box-orient: vertical;
    }
</style>
<div class="bcgd" style="margin-top : 20px">

    <h5 class="text-center" style="text-transform:uppercase">DANH SÁCH ĐỀ THI THEO MÔN @ViewBag.tenMonHoc </h5>

</div>

<div class="container">
    <div class="row">
        @foreach (var dt in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">

                        <a href="/Home/CheckTypeFile/@dt.ExamID">
                            <img src="~/Content/images/AnhBaoCao/@dt.Image">
                        </a>

                    </div>
                    <div class="product-content">
                        <div class="text">
                            <a href="/Home/CheckTypeFile/@dt.ExamID" class="tieude"> @dt.ExamName</a>
                        </div>
                        <hr />
                        <div class="view">
                            <span><i class="fa-regular fa-eye"></i> @dt.ViewCount</span>
                            <span><i class="fa-solid fa-download"></i> @dt.DownloadCount</span>
                        </div>


                    </div>
                </div>
            </div>
        }
    </div>
</div>


