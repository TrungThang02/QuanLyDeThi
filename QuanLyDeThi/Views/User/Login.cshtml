@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h4 class="text-uppercase text-center">Đăng nhập hệ thống</h4>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="mb-3">
                                <label for="TenDN" class="form-label">Tên người dùng</label>
                                @Html.TextBox("TenDN", null, new { @class = "form-control", placeholder = "Tên người dùng" })
                            </div>
                            <div class="mb-3">
                                <label for="MatKhau" class="form-label">Mật khẩu</label>
                                @Html.Password("MatKhau", null, new { @class = "form-control", placeholder = "Mật khẩu" })
                            </div>
                            <div class="form-group text-right">
                                <a href="@Url.Action("ForgotPassword", "User")" class="form-label" style="font-style: italic; color: #3b5998">Quên mật khẩu?</a>
                            </div>
                            <p style="color: red; font-weight: bold; text-align: center">@ViewBag.ThongBao</p>
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
                            <div class="form-group text-center mt-3">
                                <span class="form-label">Chưa có tài khoản? Nhấp <a href="/User/SignUp" class="font-weight-bold text-primary">vào đây</a> để đăng ký!</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
