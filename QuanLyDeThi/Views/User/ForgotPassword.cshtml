
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container-scroller mt-3">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0 justify-content-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="card shadow rounded-lg">
                        <div class="card-body">
                            <h3 class="text-center mb-4">Quên mật khẩu?</h3>
                            <p class="text-center fw-light">Nhập vào Email tài khoản</p>
                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    @Html.TextBox("Email", "", null, new { @class = "form-control form-control-lg", placeholder = "Nhập vào email tài khoản" })
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary btn-block btn-lg font-weight-medium auth-form-btn">Gửi</button>
                                </div>
                                <div class="text-success mt-3">
                                    <p class="text-center">@ViewBag.Message</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
