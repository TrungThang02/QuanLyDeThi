@model  QuanLyDeThi.Models.Exam
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<style>
    .file {
        display: flex;
        margin: 10px;
        justify-content: space-around;
    }

    s
    .form-control {
        border-radius: 8px;
    }
</style>
<div>
    <h4 align="center">Chỉnh sửa báo cáo</h4>
    @ViewBag.Thongbao
    @*Thêm thuộc tính cho form để upload ảnh*@
    @using (Html.BeginForm("Edit", "Exams", FormMethod.Post, new
    {
        @enctype =
    "multipart/form-data"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group file">


                <div class="col-md-11">
                    <label class="control-label">Mã tài liệu:</label>
                    <input type="text" size="70" name="iMaSach" value="@Model.ExamID" class="form-control"
                           required readonly />
                </div>


            </div>
            <div class="form-group file">

                <div class="col-md-5">
                    <label class="control-label">Tên tài liệu:</label>
                    <input type="text" size="70" name="sTenSach" value="@Model.ExamName" class="form-control"
                           required />
                </div>



                <div class="col-md-5">
                    <label class="control-label">Mô tả:</label>
                    <textarea name="sMoTa" id="mytextarea" class="form-control">@Model.Description</textarea>
                </div>

            </div>
            <div class="form-group file">


                <div class="col-md-5">
                    <label class="control-label">Ảnh bìa:</label>
                    <input type="file" name="image" class="form-control" />
                    @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                    @ViewBag.ThongBao
                    <img src="~/Content/images/AnhBaoCao/@Model.Image" alt="Alternate Text" width="50px" value="@Model.Image" />
                </div>



                <div class="col-md-5">
                    <label class="control-label">File tài liệu:</label>
                    <input type="file" name="file" class="form-control" value="@Model.UrlFile" />
                    @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                    @ViewBag.ThongBao
                    <p>LƯU Ý : Chỉ được up file tài liệu < 20.MB !</p>
                </div>


            </div>
            <div class="form-group file">

                <div class="col-md-5">
                    <label class="control-label">Ngày tải lên:</label>
                    <input type="date" name="dNgayCapNhat" required class="form-control" value="@Model.UploadDate" />
                </div>


                <div class="col-md-5">
                    <label class="control-label">Lớp:</label>
                    @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                    @Html.DropDownList("ClassID", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group file">



                <div class="col-md-5">
                    <label class="control-label">Môn học:</label>
                    @Html.DropDownList("SubjectID", null, new { @class = "form-control" })
                </div>

                <div class="col-md-5">
                    <label class="control-label">Từ khóa:</label>
                    <input type="text" size="70" name="sKeyword" value="@Model.Keyword" class="form-control"
                           required />
                </div>
            </div>

            <div class="form-group file">

               
            </div>
            <div class="form-group file">

                <div class="col-md-11">
                    <label class="control-label">Tác giả:</label>
                    <input type="text" size="70" name="tentacgia" value="@Model.Author" class="form-control"
                           required />
                </div>
            </div>
            <div class="d-flex mt-2" style="display: flex; justify-content:center; align-content:center">
                <div style="display: flex">

                    <div class="col-md-offset-2 m-2">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                    <div class="m-2">
                        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
                    </div>
                </div>
            </div>

        </div>
    }
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>